{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "one-var": 0,
    "indent": ["error", 2],
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "max-len": ["error", 80],
    "comma-dangle": 1,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": [2, { "commonjs": true }]
  }
}
